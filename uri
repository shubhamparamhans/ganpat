			$('#scrollbar2').tinyscrollbar();	
			$(".music_genre").click(function(){
					var name_is=$(this).value();
					var search_element=$("#search_bar").val();
					search_element+=" ";
					search_element+=name_is;
					$("#search_bar").val(search_element);
			});
		});
	</script>
